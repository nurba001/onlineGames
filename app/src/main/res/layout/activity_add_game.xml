<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#121212">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить новую игру"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="20dp"/>

    <EditText
        android:id="@+id/edit_add_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Название игры"
        android:textColorHint="#888"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>

    <EditText
        android:id="@+id/edit_add_genre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Жанр (например: Action)"
        android:textColorHint="#888"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>

    <EditText
        android:id="@+id/edit_add_platform"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:hint="Платформа (например: PC)"
        android:textColorHint="#888"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"/>

    <Button
        android:id="@+id/button_save_new_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Сохранить в базу"
        android:backgroundTint="#4CAF50"/>

</LinearLayout>