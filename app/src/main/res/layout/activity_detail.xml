<?xml version="1.0" encoding="utf-8"?>
<!-- ScrollView нужен, чтобы экран можно было прокручивать, если описание длинное -->
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailActivity">
    <!-- Мы позже создадим DetailActivity в папке 'view' -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- 1. Обложка/Скриншот -->
        <ImageView
            android:id="@+id/detail_image_cover"
            android:layout_width="0dp"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:background="#DDD"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@tools:sample/backgrounds/scenic" />

        <!-- 2. Название -->
        <TextView
            android:id="@+id/detail_text_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
            app:layout_constraintTop_toBottomOf="@id/detail_image_cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Очень Длинное Название Игры" />

        <!-- 3. Описание -->
        <TextView
            android:id="@+id/detail_text_description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body1"
            app:layout_constraintTop_toBottomOf="@id/detail_text_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="Здесь будет очень длинное описание игры, которое рассказывает о ее мире, геймплее и сюжете. Бла-бла-бла..." />

        <!-- 4. Платформы и Жанр (в один ряд) -->
        <TextView
            android:id="@+id/detail_text_platform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintTop_toBottomOf="@id/detail_text_description"
            app:layout_constraintStart_toStartOf="parent"
            tools:text="Платформы: PC, PS5" />

        <TextView
            android:id="@+id/detail_text_genre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:textStyle="bold"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
            app:layout_constraintTop_toTopOf="@id/detail_text_platform"
            app:layout_constraintStart_toEndOf="@id/detail_text_platform"
            tools:text="Жанр: RPG" />

        <!-- 5. Блок "Избранное" (Отзыв и Оценка) -->
        <TextView
            android:id="@+id/label_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:text="Добавить в избранное"
            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
            app:layout_constraintTop_toBottomOf="@id/detail_text_platform"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Поле для ввода комментария -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/input_layout_comment"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/label_favorite"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="Ваш комментарий (отзыв)">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/edit_text_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minLines="3"
                android:gravity="top"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Рейтинг (звездочки) -->
        <RatingBar
            android:id="@+id/rating_bar_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:numStars="5"
            android:stepSize="0.5"
            app:layout_constraintTop_toBottomOf="@id/input_layout_comment"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Кнопка сохранения -->
        <Button
            android:id="@+id/button_save_favorite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Сохранить"
            app:layout_constraintTop_toBottomOf="@id/rating_bar_user"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>